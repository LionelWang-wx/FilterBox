<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="车牌号"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/edt_input_min"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_common_purple_frame"
        android:hint=""
        android:maxLines="1"
        android:inputType="number"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:textColor="#333"
        android:textColorHint="#FFAFAFAF"
        android:textSize="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_split_line"
        />
<!--分割线-->
    <ImageView
        android:id="@+id/iv_split_line"
        android:layout_width="28dp"
        android:layout_height="8dp"
        android:src="@mipmap/icon_split_line"
        app:layout_constraintTop_toTopOf="@+id/edt_input_min"
        app:layout_constraintBottom_toBottomOf="@+id/edt_input_min"
        app:layout_constraintStart_toEndOf="@+id/edt_input_min"
        app:layout_constraintEnd_toStartOf="@+id/edt_input_max"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

    <EditText
        android:id="@+id/edt_input_max"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_common_purple_frame"
        android:hint=""
        android:maxLines="1"
        android:gravity="center"
        android:inputType="number"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:textColor="#333"
        android:textColorHint="#FFAFAFAF"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="@+id/iv_split_line"
        app:layout_constraintBottom_toBottomOf="@+id/iv_split_line"
        app:layout_constraintStart_toEndOf="@+id/iv_split_line"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>